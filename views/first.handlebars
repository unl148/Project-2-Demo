<div id="wrapper" class="container ">
  <!-- User and Log Out Buttons -->
  <div class="row d-flex justify-content-end">
    <div class="col-sm-3 p-3">
      <span> {{userName}}</span> <button class="buttonStyle"><a href="/">Log Out</a></button>
    </div>
  </div>
  <!-- app name -->
  <div class="row text-center">
    <div class="col-sm-12">
      <h1 class="headingStyles">like it or not</h1>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
    <div class="col-sm-7">
      <!-- form starts here -->
      <form>
        <!-- main input of thing u like or not! -->
        <input style="opacity:0.9" class="form-control form-control-lg" type="text" id="thought"
          placeholder="your thought goes here" required>
        <!-- range meter -->
        <div class="form-group">
          <label for=""></label>
          <input style="opacity: 0.9;" name="range" type="range" min="1" max="5" value="3" class="form-control-range"
            id="range">
        </div>
        <!-- categoty selector -->
        <div class="row">
          <div class="col-sm-12">
            <!-- select of category -->
            <div class="form-group">
              <select style="opacity:0.9" class="custom-select" id="selectCategory">
                {{#each categories}}
                  <option value="{{id}}">{{category}}</option>
                {{/each}}
              </select>
              <!-- <div class="invalid-feedback">Example invalid custom select feedback</div> -->
            </div>
          </div>
        </div>
        <!-- Text area-->
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label class="headingStyles" for="comment">
                <h4>Your comment goes here</h4>
              </label>
              <textarea style="opacity:0.8" class="form-control" id="comment" rows="5"></textarea>
            </div>
          </div>
        </div>
        <!-- submit -->
        <div class="row text-center">
          <div class="col-md-12">
            <button  id="create" class="buttonStyle mr-3" type="submit">Add feeling</button> <button id="cancel"
              class="ml-3 buttonStyle" formnovalidate>Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- end of Wrapper -->
</div>
<script src="/js/first.js"></script>