<div id="wrapper" class="container ">
  <!-- User and Log Out Buttons -->
  <div class="row d-flex justify-content-end">
    <div class="col-sm-3 p-3">
      <span> User Name</span> <button class="buttonStyle"><a href="/">Log Out</a></button>
    </div>
  </div>
  <!-- Form Begins -->
  <form>
    <!-- search bar -->
    <div class="row text-center justify-content-center">
      <div class="col-sm-5">
        <input style="opacity:0.9" class="form-control form-control-lg" type="text" id="query" placeholder="search">
      </div>
    </div>
    <br>
    <!-- tabel -->
    <div class="row justify-content-center">
      <div class="col-sm-7">
        <table class="table table-hover text-center ">
          <thead id="tableHeadings">
            <tr>
              <th>#</th>
              <th>Thing</th>
              <th>Rate</th>
              <th>Date</th>
              <th>Category</th>

            </tr>
          </thead>
          <tbody id="tableBody">
            {{#each thoughts}}
            <tr>
              <td> {{id}}</td>
              <td>{{title}}</td>
              <td>5</td>
              <td>06/01/18</td>
              <td>Restaurant</td>
            </tr>
        
            {{/each}}

            <tr>
              <td> 1</td>
              <td>Good drink</td>
              <td>5</td>
              <td>06/01/18</td>
              <td>Restaurant</td>

            </tr>
            <tr>
              <td> 2</td>
              <td>Exelent drink</td>
              <td>10</td>
              <td>08/12/19</td>
              <td>Restaurant</td>

            </tr>
            <tr>
              <td>3</td>
              <td>Bad drink</td>
              <td>2</td>
              <td>09/01/19</td>
              <td>Restaurant</td>

            </tr>
          </tbody>
        </table>
        <br>
        <!-- categoty selector -->
        <div class="row">
          <div class="col-sm-12">
            <!-- select of category -->
            <div class="form-group">
              <select style="opacity:0.9" class="custom-select" id="selectCategory">
                <option value="">Chose category</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
              <!-- <div class="invalid-feedback">Example invalid custom select feedback</div> -->
            </div>
          </div>
        </div>
        <!-- submit -->
        <div class="row text-center">
          <div class="col-md-12">
            <button id="submit" class="submitSearch buttonStyle r-3">Search</button>
          </div>
        </div>
        <!-- date picker-->
        <div class="row text-center p-3">
          <div class="col-sm-12">
            <div class="form-group">
              from <input class="m-2" type="date" id="dateStart"> to <input class="m-2" type="date" id="dateFinish">
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end of form -->
  </form>
  <!-- create new thought button -->
  <div class="row d-flex justify-content-end">
    <div class="col-sm-3 p-3">
      <button class="ml-3 buttonStyle"><a href="./first.html">New Thought</a></button>
    </div>
  </div>
  <!-- wrapper ends here -->
</div>


<script src="/js/search.js"></script>